@{
	ViewBag.Title = "SignIn";
	ViewBag.Title2 = "로그인";
	Layout = "~/Views/Shared/_LayoutSign.cshtml";
}

@model MobleFinalServer.Models.Login
<form method="post" asp-controller="User" asp-action="SignIn">
	<div class="form-group">
		<label for="email">아이디</label>
		<input type="text" class="form-control" asp-for="Email" placeholder="이메일을 입력하세요" required>
	</div>
	<div class="form-group">
		<label for="password">비밀번호</label>
		<input type="password" class="form-control" asp-for="Password" placeholder="비밀번호를 입력하세요"
			   required>
	</div>
	@if (Model != null && !string.IsNullOrEmpty(Model.ErrorMessage))
	{
		<div class="form-group">
			<div class="text-center text-danger">
				@Model.ErrorMessage
			</div>
		</div>
	}
	<button type="submit" class="btn btn-primary btn-block">로그인</button>
</form>
<div class="text-center mt-3">
	<a asp-controller="User" asp-action="SignUp">회원가입</a>
	<span>&nbsp;&nbsp;&nbsp;</span>
	<a href="http://bearhouseserver.iptime.org:13002/phpMyAdmin/">DB 관리 페이지</a>
</div>